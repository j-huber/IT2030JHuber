@model IEnumerable<EnrollmentApplication.Models.Student>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div id="StudentoftheMonth">
    @Ajax.ActionLink("Student of the Month", "StudentoftheMonth", null, new AjaxOptions
{
    UpdateTargetId = "StudentoftheMonth",
    InsertionMode = InsertionMode.Replace,
    HttpMethod = "GET"
}, new {@class = "btn btn-primary" })
</div>



<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StudentLastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentFirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StudentLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.StudentID }) |
            @Html.ActionLink("Details", "Details", new { id=item.StudentID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.StudentID })
        </td>
    </tr>
}

</table>


@section Scripts
{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/Apps/StudentScripts.js"></script>
    }
